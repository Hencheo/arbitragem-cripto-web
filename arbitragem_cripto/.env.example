# Configurações gerais
DEBUG=True
SECRET_KEY=sua_chave_secreta_aqui
ENVIRONMENT=development

# Configurações do banco de dados
DATABASE_URL=sqlite:///arbitragem.db

# Configuração JWT
JWT_SECRET_KEY=outra_chave_secreta_muito_segura
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hora
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 dias

# Configurações de log
LOG_LEVEL=INFO
LOG_FILE=arbitragem.log

# Configurações de API de exchanges

# Binance
BINANCE_API_KEY=sua_api_key_binance
BINANCE_API_SECRET=seu_api_secret_binance

# Coinbase
COINBASE_API_KEY=sua_api_key_coinbase
COINBASE_API_SECRET=seu_api_secret_coinbase

# Kraken
KRAKEN_API_KEY=sua_api_key_kraken
KRAKEN_API_SECRET=seu_api_secret_kraken

# Bybit
BYBIT_API_KEY=sua_api_key_bybit
BYBIT_API_SECRET=seu_api_secret_bybit

# KuCoin
KUCOIN_API_KEY=sua_api_key_kucoin
KUCOIN_API_SECRET=seu_api_secret_kucoin
KUCOIN_API_PASSPHRASE=sua_passphrase_kucoin

# Configurações do coletor de dados
DATA_COLLECTION_INTERVAL=60  # segundos
OPPORTUNITY_THRESHOLD=0.5  # diferença percentual mínima

# Configurações de e-mail para notificações
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_app_gmail
MAIL_DEFAULT_SENDER=seu_email@gmail.com